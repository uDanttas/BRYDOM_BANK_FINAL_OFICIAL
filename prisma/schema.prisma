generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model usuario {
  id     Int     @id @default(autoincrement())
  cpf    String  @unique
  nome   String
  senha  String
  saldo  Float
  tipo   String    // Pode ser "mestre" ou "cliente"
  bots   bot[]
}

model bot {
  id             Int      @id @default(autoincrement())
  nome           String
  usuarioId      Int
  ativo          Boolean  @default(true)
  saldo_operacional Float
  lucro_hoje     Float    @default(0)
  atingiu_meta   Boolean  @default(false)
  usuario        usuario  @relation(fields: [usuarioId], references: [id])
  historico      historico_operacao[]
}

model historico_operacao {
  id        Int    @id @default(autoincrement())
  botId     Int
  valor     Float
  horario   DateTime @default(now())
  bot       bot      @relation(fields: [botId], references: [id])
}
